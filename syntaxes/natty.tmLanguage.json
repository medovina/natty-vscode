{
	"$schema": "https://raw.githubusercontent.com/martinring/tmlanguage/master/tmlanguage.json",
	"name": "Natty",
	"patterns": [
		{ "include": "#keywords" }
	],
	"repository": {
		"keywords": {
			"patterns": [
				{
					"name": "comment.line.number-sign.natty",
					"match": "#.*"
				},
				{
					"name": "entity.name.function.natty",
					"match": "^\\s*(\\d+|[a-z])\\."
				},
                {
					"name": "entity.name.function.natty",
					"match": "\\[.+?\\]"
                },
				{
					"name": "storage.type.natty",
					"match": "^\\s*(Axiom|Corollary|Definition|Lemma|Proof|Theorem|using)"
				},
                {
					"name": "entity.name.function.natty",
					"match": "(?<=^\\s*(Axiom|Corollary|Lemma|Theorem)) *\\(.+?\\)"
                },
                {
					"name": "markup.italic.natty",
                    "match": "(?<=^\\s*Axiom.*exists a type \\S+ \\(the )\\w+( \\w+)?(?=\\))"
                },
                {
					"name": "markup.italic.natty",
                    "match": "(?<=^\\s*Definition.*is )\\w+(?= if)"
                },
                {
					"name": "markup.italic.natty",
                    "match": "(?<=^\\s*Definition.*is an? )\\w+ (\\w+ )?(?=(of \\w+ (and \\w+ )?|from \\w+ to \\w+ )if)"
                }
			]
		}
	},
	"scopeName": "source.natty"
}
